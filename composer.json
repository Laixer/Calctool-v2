{
    "name": "bynqio/calculatietool",
    "description": "Online Calculation, ERP and CRM application.",
    "keywords": [
        "laravel",
        "bynqio",
        "crm",
        "erp",
        "calculation"
    ],
    "type": "project",
    "license": "Proprietary",
    "authors": [
        {
            "name": "Yorick de Wid",
            "email": "y.dewid@calculatietool.com"
        },
        {
            "name": "Don Zandbergen",
            "email": "d.zandbergen@calculatietool.com"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.4.*",
        "predis/predis": "~1.0",
        "Nathanmac/Parser": "3.*",
        "intervention/image": "dev-master",
        "barryvdh/laravel-snappy": "0.3.*",
        "mollie/mollie-api-php": "1.9.x",
        "guzzlehttp/guzzle": "~5.3|~6.0",
        "jeroendesloovere/vcard": "1.2.*",
        "doctrine/dbal": "v2.5.4",
        "lucadegasperi/oauth2-server-laravel": "5.2.*",
        "spatie/laravel-newsletter": "^3.3",
        "jenssegers/agent": "^2.4",
        "webpatser/laravel-uuid": "2.*",
        "fideloper/proxy": "^3.3"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "2.8.*|3.0.*"
    },
    "autoload": {
        "classmap": [
            "database",
            "app/Models"
        ],
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "BynqIO\\CalculatieTool\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize",
            "php artisan config:cache"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize",
            "php artisan config:cache"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.5-dev"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
